{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "removeComments": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": false
  },
  "exclude": ["dist"]
}
